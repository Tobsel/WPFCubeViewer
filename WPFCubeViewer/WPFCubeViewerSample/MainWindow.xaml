<Window x:Class="WPFCubeViewerSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewer="clr-namespace:WPFCubeViewer.Controls;assembly=WPFCubeViewer"
        xmlns:local="clr-namespace:WPFCubeViewerSample"
        mc:Ignorable="d"
        Title="WPF Cube-Viewer Sample"
        Height="700"
        Width="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TabControl x:Name="CodeSettingsTabControl">
            <TabItem x:Name="CodeTabItem"
                     Header="C# Code">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBox x:Name="CodeTextBox"
                             FontFamily="Consolas"
                             FontSize="14"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Text="{Binding Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border x:Name="Brush1"
                                Grid.Column="0">
                            <TextBlock Text="1"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush2"
                                Grid.Column="1">
                            <TextBlock Text="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush3"
                                Grid.Column="2">
                            <TextBlock Text="3"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush4"
                                Grid.Column="3">
                            <TextBlock Text="4"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush5"
                                Grid.Column="4">
                            <TextBlock Text="5"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush6"
                                Grid.Column="5">
                            <TextBlock Text="6"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush7"
                                Grid.Column="6">
                            <TextBlock Text="7"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush8"
                                Grid.Column="7">
                            <TextBlock Text="8"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush9"
                                Grid.Column="8">
                            <TextBlock Text="9"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush10"
                                Grid.Column="9">
                            <TextBlock Text="10"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush11"
                                Grid.Column="10">
                            <TextBlock Text="11"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush12"
                                Grid.Column="11">
                            <TextBlock Text="12"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush13"
                                Grid.Column="12">
                            <TextBlock Text="13"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush14"
                                Grid.Column="13">
                            <TextBlock Text="14"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush15"
                                Grid.Column="14">
                            <TextBlock Text="15"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <Border x:Name="Brush16"
                                Grid.Column="15">
                            <TextBlock Text="16"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem x:Name="SettingsTabItem"
                     Header="Settings">
                <StackPanel Orientation="Vertical"
                            Margin="5">
                    <Label Content="Extent:" />
                    <Slider Minimum="1"
                            Maximum="10"
                            Value="{Binding Extent, Mode=TwoWay, ElementName=Viewer}"
                            TickFrequency="1"
                            IsSnapToTickEnabled="True" />
                    <CheckBox Content="Enable Animation"
                              IsChecked="{Binding IsAnimationEnabled, Mode=TwoWay, ElementName=Viewer}" />
                </StackPanel>
            </TabItem>
            <TabItem x:Name="CompileErrorTabItem"
                     Background="Transparent"
                     Header="Compile-Error">
                <Grid>
                    <TextBox x:Name="CompileErrorTextBox"
                             VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="14"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             Text="{Binding CompileError, Mode=OneWay, ElementName=Viewer}" />
                </Grid>
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch" />
        <viewer:WPFCubeViewer x:Name="Viewer"
                              Extent="10"
                              Code="{Binding Code, Mode=OneWay}"
                              Grid.Column="2" />
    </Grid>
</Window>
